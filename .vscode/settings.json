{
    // bitburner settings
    "bitburner.fileWatcher.enable": true,
    "bitburner.showFileWatcherEnabledNotification": true,
    "bitburner.showPushSuccessNotification": true,
    "bitburner.scriptRoot": "./scripts/",

    // non-relative imports
    "javascript.preferences.importModuleSpecifier": "non-relative",
    "typescript.preferences.importModuleSpecifier": "non-relative",
    "js/ts.implicitProjectConfig.checkJs": true,

    // disable autosave to prevent triggering filewatcher
    "files.autoSave": "off",

    // autosnippet settings
    "autoSnippet.snippets": [
        {
            "pattern": "**/*.js", 
            "snippet": "ns-template"
        },
    ],
    "cSpell.words": [
        "backdoored",
        "bgcolor",
        "brutessh",
        "dles",
        "fillcolor",
        "fontname",
        "ftpcrack",
        "Hacknet",
        "httpworm",
        "joesguns",
        "killall",
        "mult",
        "Netscript",
        "penwidth",
        "relaysmtp",
        "rootable",
        "sqlinject",
        "tprint",
        "tprintf"
    ],
    "files.associations": {
        //"*.js": "typescriptreact"
    },
    "autoSnippet.debug": true,
    "workbench.colorTheme": "Monokai Dimmed",
}